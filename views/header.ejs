<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>Yodel Stats</title>
    <link rel='stylesheet' href='/stylesheets/bootstrap.min.css' />
    <link rel='stylesheet' href='/stylesheets/style.css' />

    <script src="/javascripts/Chart.min.js"></script>
  </head>
  <body>
    <div class="navbar navbar-inverse navbar-fixed-top">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="/">Yodel Stats</a>
        </div>
        <% if (pageName != 'Login') { %>
          <div class="navbar-collapse collapse">
            <ul class="nav navbar-nav">
              <li<%=pageName == 'Notifications' ? ' class=active' : ''%>><a href="/">Notifications</a></li>
              <li<%=pageName == 'Device Creates' ? ' class=active' : ''%>><a href="/device_creates">Device Creates</a></li>
              <li<%=pageName == 'Device Updates' ? ' class=active' : ''%>><a href="/device_updates">Device Updates</a></li>
              <li<%=pageName == 'Device Deletes' ? ' class=active' : ''%>><a href="/device_deletes">Device Deletes</a></li>
            </ul>
            <a class="logout btn btn-primary navbar-btn pull-right" href="/logout">Logout</a>
          </div>
        <% } %>
      </div>
    </div>

    <div class="jumbotron">
      <div class="container">
        <h1 id="sectheader"><%=pageName%></h1>
        <% if (typeof subheading != 'undefined') { %>
          <h2><%=subheading%></h2>
        <% } %>
      </div>
    </div>

    <div class="container main-content">

      <% if (typeof errorMessage != 'undefined') { %>
        <div class="alert alert-dismissable alert-warning">
          <button type="button" class="close" data-dismiss="alert">Ã—</button>
          <p><%=errorMessage%></p>
        </div>
      <% } %>
